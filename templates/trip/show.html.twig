{% extends 'base.html.twig' %}

{% block body %}

    <div class="border-b border-white/20 py-8 px-4 mb-16">
        <div class="max-w-screen-xl px-4 flex items-center">
            <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 256 512" fill="#fff" width="16px" height="16px"><!--! Font Awesome Pro 6.1.1 by @fontawesome - https://fontawesome.com License - https://fontawesome.com/license (Commercial License) Copyright 2022 Fonticons, Inc. --><path d="M137.4 406.6l-128-127.1C3.125 272.4 0 264.2 0 255.1s3.125-16.38 9.375-22.63l128-127.1c9.156-9.156 22.91-11.9 34.88-6.943S192 115.1 192 128v255.1c0 12.94-7.781 24.62-19.75 29.58S146.5 415.8 137.4 406.6z"/></svg>
            <a href="#" class="uppercase cursor-pointer hover:text-[#6cc7cd]">Back to travel list</a>
        </div>
    </div>
    <div class="max-w-screen-xl mx-auto px-4">
        <div class="grid grid-cols-1 md:grid-cols-2">
            <img src="{{ asset('imgs/planetMiller.png') }}"></img>
            <div class="mx-auto">
                <h1 class="text-6xl">Swim Planet Miller</h1>
                <p class="text-lg opacity-60">This trip is recommended for expert level swimmers!</p>
                <form>
                    <div class="space-y-12">
                        <div>
                            <h2 class="mt-10 mb-4 text-base font-semibold leading-7">Sign up for this adventure!</h2>
                            <div class="grid grid-cols-1 gap-x-6 gap-y-8">
                                <div>
                                    <label for="full-name" class="block text-sm font-medium leading-6">Full Name</label>
                                    <div class="mt-2">
                                        <input type="text" name="full-name" id="full-name" autocomplete="legal-name" class="block w-full rounded-md border-0 py-1.5 shadow-sm ring-1 ring-inset ring-[#465568] bg-transparent placeholder:text-gray-400 focus:ring-2 focus:ring-inset focus:ring-indigo-600 sm:text-sm sm:leading-6">
                                    </div>
                                </div>

                                <div>
                                    <label for="email" class="block text-sm font-medium leading-6">Email address</label>
                                    <div class="mt-2">
                                        <input id="email" name="email" type="email" autocomplete="email" class="block w-full rounded-md border-0 py-1.5 shadow-sm ring-1 ring-inset ring-[#465568] bg-transparent placeholder:text-gray-400 focus:ring-2 focus:ring-inset focus:ring-indigo-600 sm:text-sm sm:leading-6">
                                    </div>
                                </div>
                                
                            </div>
                        </div>

                        <div>
                            <div class="space-y-10">
                                <fieldset>
                                    <div class="space-y-6">
                                        <div class="relative flex gap-x-3">
                                            <div class="flex h-6 items-center">
                                                <input id="candidates" name="candidates" type="checkbox" class="h-4 w-4 rounded border-gray-300 text-indigo-600 focus:ring-indigo-600">
                                            </div>
                                            <div class="text-sm leading-6">
                                                <label for="candidates" class="font-medium">Subscribe to our newsletter</label>
                                            </div>
                                        </div>
                                        
                                    </div>
                                </fieldset>
                            </div>
                        </div>
                    </div>

                    <div class="mt-6">
                        <button type="submit" class="rounded-md bg-[#009BE3] px-3 py-2 text-sm font-semibold text-white shadow-sm hover:bg-[#0082CA] focus-visible:outline focus-visible:outline-2 focus-visible:outline-offset-2 focus-visible:outline-indigo-600">Book Trip</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
{% endblock %}
